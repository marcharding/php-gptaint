{{ form_start(form) }}

<div class="sm:flex sm:items-center">
    <div class="sm:flex-auto flex justify-between">
        <p class="mt-2 text-sm text-gray-700">Details about the found code issues/taint</p>
        <button class="block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Speichern</button>
    </div>
</div>

<div class="mb-4">
    {{ form_label(form.type, 'Type', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
    {{ form_widget(form.type, {'attr': {'class': 'form-control w-full h-fit'}}) }}
    {{ form_errors(form.type) }}
</div>

<div class="mb-4">
    {{ form_label(form.prompt, 'Prompt', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
    {{ form_widget(form.prompt, {'attr': { 'class': 'form-control w-full h-96'}}) }}
    {{ form_errors(form.prompt) }}
</div>

<div class="mb-6">
    {{ form_label(form.active, 'Active', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
    <div class="flex items-center">
        {{ form_widget(form.active, {'attr': {'class': 'form-checkbox'}}) }}
        <label for="{{ form.active.vars.id }}" class="ml-2 text-sm text-gray-700">Use this prompt</label>
    </div>
    {{ form_errors(form.active) }}
</div>

{{ form_widget(form) }}

{{ form_end(form) }}

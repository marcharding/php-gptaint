{% extends 'base.html.twig' %}

{% block title %}Issue{% endblock %}

{% block body %}

    <div>
        <div class="sm:flex sm:items-center">
            <div class="sm:flex-auto flex justify-between">
                <p class="mt-2 text-sm text-gray-700">Details and issues about the selected code</p>
                <a href="#"
                   class="block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                    Query GPT (add to queues)
                </a>
            </div>
        </div>
        <div class="mt-6 border-t border-gray-100">
            <dl class="divide-y divide-gray-100">
                <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                    <dt class="text-sm font-medium leading-6 text-gray-900">Name</dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">{{ issue.taintId }}</dd>
                </div>
                <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                    <dt class="text-sm font-medium leading-6 text-gray-900">Directory</dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">{{ issue.type }}</dd>
                </div>
                <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                    <dt class="text-sm font-medium leading-6 text-gray-900">Directory</dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">{{ issue.description }}</dd>
                </div>
            </dl>
        </div>
    </div>

    <div>
        <div class="sm:flex sm:items-center">
            <div class="sm:flex-auto">
                <p class="mt-2 text-sm text-gray-700">GPT Results</p>
            </div>
        </div>
        <div class="mt-6 border-t border-gray-100">
        {% for issue in issue.getGptResults %}
            <dl class="divide-y divide-gray-100">
                <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                    <dt class="text-sm font-medium leading-6 text-gray-900">exploitProbability</dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"> {{ issue.exploitProbability }}</dd>
                </div>
            </dl>
        {% endfor %}
        </div>
    </div>

    <div class="mx-auto py-16">
        <dl class="mt-4 space-y-6 divide-y divide-gray-900/10">
            <div class="pt-6" x-data="{open: false}">
                <dt>
                    <button type="button" class="flex w-full items-start justify-between text-left text-gray-900"
                            aria-controls="faq-0" aria-expanded="false" @click="open = !open">
                        <span class="text-base font-semibold leading-7">Extraced code path</span>
                        <span class="ml-6 flex h-7 items-center">
                            <svg class="h-6 w-6" x-bind:class="{ 'hidden': open }" x-init="open = false"
                                 fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                                 aria-hidden="true">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m6-6H6"/>
                            </svg>
                            <svg class="h-6 w-6" x-bind:class="{ 'hidden': !open }" x-init="open = false"
                                 fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                                 aria-hidden="true">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M18 12H6"/>
                            </svg>
                          </span>
                    </button>
                </dt>
                <dd class="mt-2" x-bind:class="{ 'hidden': !open }" x-init="open = false" id="faq-0">
                    <p class="text-base leading-7 text-gray-600">
                     <pre><code class="text-xs py-16 language-php">{{ issue.extractedCodePath }}</code></pre>
                    </p>
                </dd>
            </div>
        </dl>
    </div>

{% endblock %}
